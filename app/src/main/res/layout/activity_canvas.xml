<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.CanvasActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#CFCFCF"
        android:gravity="center"
        android:paddingVertical="6dp"
        android:orientation="horizontal">
        <ImageButton
            android:id="@+id/btnSign"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="10dp"
            android:src="@drawable/toggle_sign"
            android:background="@android:color/transparent"
            android:clickable="true"
            android:focusable="true" />
        <ImageButton
            android:id="@+id/btnRect"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="10dp"
            android:src="@drawable/toggle_rectangle"
            android:background="@android:color/transparent"
            android:clickable="true"
            android:focusable="true" />
        <ImageButton
            android:id="@+id/btnCircle"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="10dp"
            android:src="@drawable/toggle_circle"
            android:background="@android:color/transparent"
            android:clickable="true"
            android:focusable="true" />
        <com.google.android.material.slider.Slider
            android:id="@+id/valueSlider"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:valueFrom="1"
            android:valueTo="10" />
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etRadius"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:background="@drawable/text_border"
            android:inputType="number"
            android:maxLines="1"
            android:text="4"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutCanvas"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/canvas_border"
        android:orientation="horizontal" />

</LinearLayout>
